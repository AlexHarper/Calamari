<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Calamari.Java</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net40;netcoreapp2.0</TargetFrameworks>
    <RuntimeIdentifiers>linux-x64;osx-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net40' ">
    <DefineConstants>$(DefineConstants);USE_NUGET_V2_LIBS</DefineConstants>
    <PlatformTarget>anycpu</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.1.1" />
    <PackageReference Include="Octopus.Dependencies.Java" Version="1.0.10-alpha1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.0'">
    <PackageReference Include="System.ComponentModel.TypeConverter">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Calamari\Calamari.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="C:\Users\agentuser\.nuget\packages\octopus.dependencies.java\1.0.10-alpha1\contentFiles\any\any\calamari.jar">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="C:\Users\agentuser\.nuget\packages\octopus.dependencies.java\1.0.10-alpha1\contentFiles\any\any\jboss-cli.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="C:\Users\agentuser\.nuget\packages\octopus.dependencies.java\1.0.10-alpha1\contentFiles\any\any\tools.jar">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
